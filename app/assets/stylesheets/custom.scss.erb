/* CSS Document */

/* FONT STYLINGS */

h1, h2, h3, h4, li, p {
	font-family: "Ubuntu", sans-serif;
}

/* img centering */
img.center {
  display: block;
  margin-left: auto;
  margin-right: auto;
}

/* NAVBAR STYLES */

.navbar-inverse .navbar-nav>.active>a {
	color: white; 
	background-color: #b60101;
}
	
.navbar-inverse .navbar-nav>.active>a:hover {
	background-color: #b60101;
	opacity: .6;
}
	
.navbar-inverse .navbar-nav>li:hover {
	background-color: #b60101;
	opacity: .6;
}
	
.navbar-brand>img {
    margin: -8px;
}

.navbar-toggle {
	margin-right: -15px;
}

#nav-clear {
	clear: both;
}

/* ABOUT ME STYLES */

#about-me {
